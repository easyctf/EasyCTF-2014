doctype html
html
	head
		meta(charset="utf-8")
		title Injection

	body
		form(action="/sites/injection/index.php", method="post")
			h1 Login to Access User Message
			table
				tr
					td Username
					td
						input(type='text', name='username', autocomplete='off', autofocus)
				tr
					td Password
					td
						input(type='password', name='password', autocomplete='off')
				tr
					td
					td
						input(type='submit', name='submit', value='Login')

		div#result
			if posted
				if error
					h2 MySQL Error Occurred
				else
					table(border='1')
						tr
							th username
							th message
						- each user in users
							tr
								td #{user.name}
								td #{user.message}